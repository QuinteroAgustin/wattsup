{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    <div class="flex min-h-full flex-1 flex-col justify-center px-6 py-12 lg:px-8">
      <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <img class="mx-auto" style="width:200px" src="{{ asset('images/logo.png') }}">
        <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Réinitialisation du mot de passe</h2>
      </div>
      <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        {{ form_errors(resetForm) }}
        {{ form_start(resetForm) }}
            <div>
                <label for="plainPassword" class="block text-sm font-medium leading-6 text-gray-900">Nouveau mot de passe</label>
                <div class="mt-2">
                <input id="plainPassword" value="{{ field_value(resetForm.plainPassword) }}" name="{{ field_name(resetForm.plainPassword) }}" type="password" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 sm:text-sm sm:leading-6" />
                </div>
            </div>

            <div style="margin-top:10px; margin-bottom:10px"></div>

            <div>
                <button type="submit" class="flex w-full justify-center rounded-md bg-green-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-green-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600">
                Réinitialiser le mot de passe
                </button>
            </div>
                          
            {{ form_end(resetForm) }}

        <p class="mt-10 text-center text-sm text-gray-500">
          Déjà un compte ?
          <a href="{{ path('app_login') }}" class="font-semibold leading-6 text-green-600 hover:text-green-500">
            Connexion
          </a>
        </p>
      </div>
    </div>
{% endblock %}
