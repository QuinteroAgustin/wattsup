{% extends 'base.html.twig' %}
{% block title %}Disscussion{% endblock %}
{% block body %}
<div id="chat" class="bg-gray-100 h-screen">
  <div class="grid grid-cols-1 md:grid-cols-3 h-full">
    <!-- Sidebar -->
    <div class="bg-white border-r border-gray-300 md:col-span-1 h-full md:block hidden">
      <div class="flex flex-col items-center py-6 h-full">
        <!-- Nom profil, btn deconnexion -->
        <div class="inline-flex items-center justify-between w-full">
          <div class="ml-4">
            
          </div>
          <div class="mr-4">
            <a href="{{ path('app_logout') }}" class="border font-bold py-2 px-4 rounded-full flex items-center">
              <!-- Icone SVG de déconnexion -->
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H7a3 3 0 01-3-3V7a3 3 0 013-3h3a3 3 0 013 3v1"/>
              </svg>
            </a>
          </div>
        </div>
        <!-- LOGO -->
        <div class="p-3 rounded-full mb-6">
          <img src="{{ asset('images/logo.png') }}" alt="Logo" class="w-20 h-20">
        </div>

        <div class="w-full px-6 mb-6">
            <!-- Bouton pour créer une commission -->
            <button id="createCommissionBtn" class="w-full px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-400">
                Créer une commission
            </button>
        </div>

        <!-- Modal pour le formulaire de création -->
        <div id="createCommissionModal" class="hidden fixed inset-0 bg-gray-800 bg-opacity-75 flex justify-center items-center">
            <div class="bg-white p-6 rounded-lg w-1/2">
                <h2 class="text-xl font-bold mb-4">Créer une nouvelle commission</h2>
                <form id="createCommissionForm" method="post" action="{{ path('app_create_commission') }}">
                    <div class="mb-4">
                        <label for="name" class="block text-sm font-medium text-gray-700">Nom de la commission</label>
                        <input type="text" name="name" id="name" class="w-full px-4 py-2 border rounded-lg" required>
                    </div>
                    <div class="mb-4">
                        <label for="temporaryDate" class="block text-sm font-medium text-gray-700">
                            Date de fermeture (optionnelle)
                        </label>
                        <input type="datetime-local" name="temporaryDate" id="temporaryDate" class="w-full px-4 py-2 border rounded-lg">
                    </div>
                    <div class="flex justify-end">
                        <button type="button" id="closeModalBtn" class="mr-2 px-4 py-2 text-gray-700">Annuler</button>
                        <button type="submit" class="px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-400">
                            Créer
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <h1 class="text-xl font-semibold mb-6">Discussions</h1>

        <!-- Champ de recherche -->
        <div class="w-full px-6 mb-6">
          <input type="text" id="searchInput" placeholder="Recherche" class="w-full px-4 py-2 border rounded-lg">
        </div>

        <!-- Liste des commissions -->
        <div class="w-full px-6 flex-1 overflow-y-auto">
            {% for commission in commissions %}
                <div class="commission-item flex items-center mb-4">
                    <img src="https://via.placeholder.com/40" alt="{{ commission.name }}" class="w-10 h-10 rounded-full mr-4">
                    <div>
                        <h2 class="font-semibold">
                            {{ commission.name }}
                            {% if notifications[commission.id] > 0 %}
                                <span class="bg-red-500 text-white text-xs rounded-full px-2 py-1 ml-2">
                                    {{ notifications[commission.id] }}
                                </span>
                            {% endif %}
                        </h2>
                        <p class="text-gray-600 text-sm">
                            Créée le {{ commission.createdAt|date('d M Y H:i') }}
                        </p>
                        <p class="text-gray-600 text-sm">
                            <a href="{{ path('app_chat', {'commissionId': commission.id}) }}" class="text-blue-500">Voir les messages</a>
                        </p>
                    </div>
                </div>
            {% else %}
                <p class="text-gray-600">Aucune commission n'a encore été créée.</p>
            {% endfor %}
        </div>
      </div>
    </div>
    <!-- Chat Section -->
    <div class="col-span-2 flex flex-col md:col-span-2 h-full">
      <!-- Header -->
      <div class="bg-green-500 p-6 flex items-center justify-between">
        <div class="flex items-center">
          <img src="https://via.placeholder.com/50" alt="{{ currentCommission }}" class="w-12 h-12 rounded-full mr-4">
          <h2 class="text-white text-xl font-semibold">{{ currentCommission }}</h2>
        </div>
        <!-- Burger Menu for Mobile -->
        <div class="md:hidden">
          <button id="burgerMenu" class="text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M3 5h14a1 1 0 110 2H3a1 1 0 110-2zm0 4h14a1 1 0 110 2H3a1 1 0 110-2zm0 4h14a1 1 0 110 2H3a1 1 0 110-2z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </div>
      <!-- Mobile Sidebar -->
      <div id="mobileSidebar" class="bg-white border-r border-gray-300 md:hidden fixed inset-y-0 left-0 w-64 transform -translate-x-full transition-transform duration-200 ease-in-out">
        <div class="flex flex-col items-center py-6 h-full">
          <div class="inline-flex items-center justify-between w-full">
            <div class="ml-4">
            
            </div>
            <div class="mr-4">
              <a href="{{ path('app_logout') }}" class="border font-bold py-2 px-4 rounded-full flex items-center">
                <!-- Icone SVG de déconnexion -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H7a3 3 0 01-3-3V7a3 3 0 013-3h3a3 3 0 013 3v1"/>
                </svg>
              </a>
            </div>
          </div>
          <div class="bg-green-500 p-3 rounded-full mb-6">
            <img src="{{ asset('images/logo.png') }}" alt="Logo" class="w-16 h-16">
          </div>
          <!-- Liste des disscussions -->
          <h1 class="text-xl font-semibold mb-6">Discussions</h1>
          <div class="w-full px-6 mb-6">
            <input type="text" id="searchInput" placeholder="Recherche" class="w-full px-4 py-2 border rounded-lg">
          </div>
          <div class="w-full px-6 flex-1 overflow-y-auto">
            {% for commission in commissions %}
              <div class="flex items-center mb-4">
                <img src="https://via.placeholder.com/40" alt="{{ commission.name }}" class="w-10 h-10 rounded-full mr-4">
                <div>
                  <h2 class="font-semibold">{{ commission.name }}</h2>
                  <p class="text-gray-600 text-sm">Créée le {{ commission.createdAt|date('d M Y H:i') }}</p>
                  <p class="text-gray-600 text-sm"><a href="{{ path('app_chat', {'commissionId': commission.id}) }}" class="text-blue-500">Voir les messages</a></p>
                </div>
              </div>
            {% else %}
              <p class="text-gray-600">Aucune commission n'a encore été créée.</p>
            {% endfor %}
          </div>
        </div>
      </div>
      <!-- Chat Messages -->
      <div class="flex-1 p-6 bg-white overflow-y-auto" id="messages-container">
          <div class="min-h-[55vh] max-h-[55vh]">
              {% if messages is empty %}
                  <p class="text-gray-600">Il n'y a pas de messages dans cette commission.</p>
              {% else %}
                  {% for message in messages %}
                      <div class="mb-4 w-max {% if message.user.id == app.user.id %}ml-auto{% endif %} flex flex-col">
                          <h3 class="font-semibold {% if message.user.id == app.user.id %}text-right{% else %}text-left{% endif %}">
                              {{ message.user.nom }} {{ message.user.prenom }}
                          </h3>
                          <p class="{% if message.user.id == app.user.id %}bg-blue-500 text-white{% else %}bg-gray-200{% endif %} p-4 rounded-lg text-left">
                              {{ message.text }}
                          </p>
                          <span class="text-gray-500 text-sm {% if message.user.id == app.user.id %}text-right{% else %}text-left{% endif %}">
                              {{ message.createdAt|date('H:i A', 'Europe/Paris') }}
                          </span>
                      </div>
                  {% endfor %}
              {% endif %}
          </div>
      </div>

      <script type="module">
        const commissionId = {{ current_commission_id|json_encode }};

        const url = new URL('http://localhost:3000/.well-known/mercure'); 
        url.searchParams.append('topic', 'https://localhost/chat/' + commissionId); 

        const eventSource = new EventSource(url, {
            headers: {
                'Authorization': 'Bearer ' + '!ChangeThisMercureHubJWTSecretKey!'
            }
        });

        eventSource.onmessage = function (event) {
          
            Turbo.visit(window.location.href);
        };

        eventSource.onerror = function () {
            console.error("Erreur lors de la connexion à Mercure");
        };
      </script>

      <script>
        document.getElementById('createCommissionBtn').addEventListener('click', () => {
            document.getElementById('createCommissionModal').classList.remove('hidden');
        });

        document.getElementById('closeModalBtn').addEventListener('click', () => {
            document.getElementById('createCommissionModal').classList.add('hidden');
        });

        function scrollToBottom() {
            const container = document.getElementById('messages-container');
            container.scrollTop = container.scrollHeight;
        }

        // Défilement initial lors du chargement de la page
        document.addEventListener("turbo:load", scrollToBottom);
      </script>
      <!-- Input Box -->
      {% if isClosed %}
          <div class="bg-red-100 text-red-600 p-4 rounded-lg">
              Cette commission est fermée. Vous ne pouvez pas envoyer de messages, mais vous pouvez consulter l'historique.
          </div>
      {% else %}
          <!-- Input Box -->
          <form method="post" action="{{ path('app_chat_send', { 'commissionId': current_commission_id }) }}">
              <div class="bg-gray-100 p-4 flex items-center">
                  <input type="text" name="message" placeholder="Écrivez votre message ici..." class="flex-1 px-4 py-2 border rounded-lg">
                  <button type="submit" class="ml-4 bg-green-500 text-white px-4 py-2 rounded-lg">Envoyer</button>
              </div>
          </form>
      {% endif %}
    </div>
  </div>

  <script>
    document.getElementById('burgerMenu').addEventListener('click', function() {
      const sidebar = document.getElementById('mobileSidebar');
      sidebar.classList.toggle('-translate-x-full');
    });

    document.getElementById('searchInput').addEventListener('input', function() {
      const query = this.value.toLowerCase();
      const commissions = document.querySelectorAll('.commission-item'); // Assurez-vous d'ajouter cette classe aux éléments des commissions

      commissions.forEach(function(commission) {
          const commissionName = commission.querySelector('h2').textContent.toLowerCase();
          if (commissionName.includes(query)) {
              commission.style.display = ''; // Afficher l'élément
          } else {
              commission.style.display = 'none'; // Masquer l'élément
          }
      });
    });
  </script>
</div>

{% endblock %}
